generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Dancer {
    id          String     @id @default(cuid())
    name        String
    email       String
    website     String?
    description String?
    picture     String?
    workshops   Workshop[]
}

model Workshop {
    id          String       @id @default(cuid())
    location    Location     @relation(fields: [locationId], references: [id])
    active      Boolean
    type        WorkshopType
    full        Boolean
    date        DateTime
    signup      String
    dancer      Dancer?      @relation(fields: [dancerId], references: [id])
    dancerId    String?
    description String
    users       User[]
    locationId  String
}

model User {
    id        String     @id @default(cuid())
    name      String
    email     String
    workshops Workshop[]
}

model Location {
    id        String     @id @default(cuid())
    name      String
    picture   String?
    Workshops Workshop[]
}

enum WorkshopType {
    FUSION
    CLASSICAL
    BOLLYWOOD
}

